        </ul>
      </div>
    </nav>

    <!-- Masthead -->
    <section class="container my-5 masthead" id="randomize-my-gift-swap">
      <div class="row">
        <div class="col-md-4">
          <h1>Gift Exchange Generator</h1>
          <h5>
            Are you hosting a gift exchange this year? Take the hassle out of it
            and automatically assign who is buying whom a gift with the
            Exchangerator gift swap randomizer!
          </h5>
          <div class="row">
            <div class="col-md-10">
              <img
                src="img/arrow.png"
                width="150"
                class="arrow float-right img-fluid"
              />
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <form>
            <div id="formContainer">
              <div class="form-group">
                <input
                  class="form-control form-control-lg name-field"
                  type="text"
                  placeholder="Enter name 1"
                  id="inputLarge1"
                  data-name="1"
                />
              </div>
              <div class="form-group">
                <input
                  class="form-control form-control-lg name-field"
                  type="text"
                  placeholder="Enter name 2"
                  id="inputLarge2"
                  data-name="2"
                />
              </div>
              <div class="form-group">
                <input
                  class="form-control form-control-lg name-field"
                  type="text"
                  placeholder="Enter name 3"
                  id="inputLarge3"
                  data-name="3"
                />
              </div>
              <div class="form-group">
                <input
                  class="form-control form-control-lg name-field"
                  type="text"
                  placeholder="Enter name 4"
                  id="inputLarge4"
                  data-name="4"
                />
              </div>
            </div>
            <div class="mb-3" id="addMoreNames">Add more names</div>
            <button type="submit" class="btn btn-primary" id="nameSubmit">
              Submit Names
            </button>
          </form>
        </div>
      </div>
    </section>

    <!-- Render givers/receivers here -->

    <!-- Bootstrap scripts -->
