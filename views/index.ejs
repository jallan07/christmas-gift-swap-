    ></script>
  </head>
  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="#">Gift Exchange Generator</a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarColor01"
          aria-controls="navbarColor01"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="#"
              ><button type="button" class="btn btn-success">
                Get Started
              </button></a
            >
          </li>
        </ul>
      </div>
    </nav>

    <!-- Masthead -->
    <section class="container my-5">
      <div class="col-md-9 row">
        <h1>Gift Exchange Generator</h1>
        <p class="col-md-6">
          Are you hosting a gift exchange this year? Take the hassle out of it
          and automatically assign who is buying whom a gift this year.
        </p>
      </div>
      <div class="col-md-5">
        <form>
          <div id="formContainer">
            <div class="form-group">
              <label class="col-form-label col-form-label-lg" for="inputLarge"
                >Enter Names</label
              >
              <input
                class="form-control form-control-lg"
                type="text"
                placeholder="Enter name 1"
                id="inputLarge"
              />
            </div>
            <div class="form-group">
              <input
                class="form-control form-control-lg"
                type="text"
                placeholder="Enter name 2"
                id="inputLarge"
              />
            </div>
            <div class="form-group">
              <input
                class="form-control form-control-lg"
                type="text"
                placeholder="Enter name 3"
                id="inputLarge"
              />
            </div>
            <div class="form-group">
              <input
                class="form-control form-control-lg"
                type="text"
                placeholder="Enter name 4"
                id="inputLarge"
              />
            </div>
          </div>
          <div class="mb-3" id="addMoreNames">Add more names</div>
          <button type="submit" class="btn btn-primary" id="nameSubmit">
            Submit Names
          </button>
        </form>
      </div>
    </section>

    <!-- Bootstrap scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
      integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js"
      integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj"
      crossorigin="anonymous"
    ></script>

    <!-- local scripts -->
